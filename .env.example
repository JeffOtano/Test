# Enable durable infrastructure mode (queue + worker + postgres + redis).
GOODBYE_PRODUCTION_MODE=false

# Durable infrastructure endpoints.
GOODBYE_POSTGRES_URL=postgresql://goodbye:goodbye@localhost:5432/goodbye_shortcut
GOODBYE_REDIS_URL=redis://localhost:6379

# Optional server-side credentials for webhook-triggered sync.
# If set, webhook requests do not need to pass x-shortcut-token/x-linear-token/x-linear-team-id.
GOODBYE_SHORTCUT_TOKEN=
GOODBYE_LINEAR_TOKEN=
GOODBYE_LINEAR_TEAM_ID=

# Webhook signature verification secrets.
GOODBYE_SHORTCUT_WEBHOOK_SECRET=
GOODBYE_LINEAR_WEBHOOK_SECRET=

# Optional shared fallback secret for both providers.
GOODBYE_WEBHOOK_SHARED_SECRET=

# Optional timestamp tolerance for Linear signed webhooks (milliseconds).
GOODBYE_LINEAR_WEBHOOK_TOLERANCE_MS=300000

# Durable queue processing settings.
GOODBYE_SYNC_JOB_ATTEMPTS=5
GOODBYE_SYNC_JOB_BACKOFF_MS=2000
GOODBYE_SYNC_WORKER_CONCURRENCY=4

# Optional scheduler (server-driven polling sync).
GOODBYE_SYNC_SCHEDULER_ENABLED=false
GOODBYE_SYNC_SCHEDULER_INTERVAL_SECONDS=30
GOODBYE_SYNC_DIRECTION=BIDIRECTIONAL
GOODBYE_SYNC_CONFLICT_POLICY=NEWEST_WINS
GOODBYE_SYNC_SHORTCUT_TEAM_ID=
GOODBYE_SYNC_INCLUDE_COMMENTS=true
GOODBYE_SYNC_INCLUDE_ATTACHMENTS=false

# Live smoke test runner (`npm run test:live`).
# Uses GOODBYE_* tokens/team by default, but these allow isolated test credentials.
GOODBYE_LIVE_SHORTCUT_TOKEN=
GOODBYE_LIVE_LINEAR_TOKEN=
GOODBYE_LIVE_SHORTCUT_TEAM_ID=
GOODBYE_LIVE_LINEAR_TEAM_ID=
GOODBYE_LIVE_PREFIX=GS-LIVE
